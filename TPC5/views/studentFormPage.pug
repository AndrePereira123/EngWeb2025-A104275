doctype html
html
  head
    meta(charset="UTF-8")
    link(rel="icon", href="/images/favicon.png")
    link(rel="stylesheet", href="/stylesheets/w3.css")
    title Student Form
  body
    .w3-card-4
      header.w3-container.w3-purple
        h2 Student Form
      form.w3-container(method="POST")
        fieldset
          legend Metadata
          label Id
          input.w3-input.w3-round(type="text", name="id", required)
          label Name
          input.w3-input.w3-round(type="text", name="nome", required)
          label Git
          input.w3-input.w3-round(type="text", name="git", required)
        fieldset
          legend TPC
          each i in [1, 2, 3, 4, 5, 6, 7, 8]
            input.w3-check(type="checkbox", name=`tpc${i}`, value="1")
            label TPC#{i}
        br
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
      footer.w3-container.w3-teal
        h5 Generated by EngWeb2023 in #{d} - 
          a(href = "/") Back