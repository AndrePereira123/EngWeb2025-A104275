doctype html
html
  head
    meta(charset="UTF-8")
    link(rel="icon", href="/images/favicon.png")
    link(rel="stylesheet", href="/stylesheets/w3.css")
    title Edit Student Form
  body
    .w3-card-4
      header.w3-container.w3-green
        h2 Edit Student Form
      form.w3-container(method="POST")
        fieldset
          legend Metadata
          label Id
          input.w3-input.w3-round(type="text", name="id", readonly, value=a.id)
          label Name
          input.w3-input.w3-round(type="text", name="nome", value=a.nome)
          label Git
          input.w3-input.w3-round(type="text", name="git", value=a.git)
        fieldset
          legend TPC
          each num in [1,2,3,4,5,6,7,8]
            if a["tpc"+num] && a["tpc"+num] == true
                input.w3-check(type="checkbox" name="tpc" + num value="1" checked) 
            else 
                input.w3-check(type="checkbox" name="tpc" + num value="1") 
            label   TPC #{num}   
        br
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Save
      footer.w3-container.w3-teal
        h5 Generated by EngWeb2023 in #{d} - 
          a(href=`/`) Back