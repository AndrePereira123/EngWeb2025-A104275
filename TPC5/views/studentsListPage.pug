doctype html
html
  head
    meta(charset="UTF-8")
    link(rel="icon", href="/images/favicon.png")
    link(rel="stylesheet", href="/stylesheets/w3.css")
    title Students List
  body
    .w3-card-4
      header.w3-container.w3-teal
        h1 Students List
          a.w3-btn.w3-round.w3-grey(href="/alunos/regist") +
      .w3-container
        table.w3-table-all
          tr
            th Id
            th Name
            th Git
            th Actions
          each aluno in slist
            tr
              td= aluno.id
              td
                a(href=`/alunos/${aluno.id}`)= aluno.nome
              td= aluno.git
              td
                a(href=`/alunos/edit/${aluno.id}`) Edit
                |  |  
                a(href=`/alunos/delete/${aluno.id}`, onclick="return confirm('Are you sure you want to delete this student?')") Delete
      footer.w3-container.w3-teal
        h5 Generated by RPCW2023 in #{d}

    