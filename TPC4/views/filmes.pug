extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1= tit
      h4
        a(href="/") Voltar
    .w3-container.blue
      table.w3-table-all
        tr.w3-teal
          th Ano 
          th Título 
          th Elenco 
          th Géneros
          th 
          th
        each f in lfilmes 
            tr
              td= f.year 
              td= f.title
              td
                ul.w3-ul 
                  each c in f.cast
                        li 
                          a(href="/ator/" + c)= c
              td
                ul.w3-ul 
                  each g in f.genres
                    li= g
              td(style="width: 150px; text-align: center; vertical-align: middle; padding: 0;border: 1px solid lightgrey;y")
                a(
                  href="/filmes/edit/" + f.id, 
                  style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; text-decoration: none; color: blue; "
                ) Editar
              td(style="width: 150px; text-align: center; vertical-align: middle; padding: 0;border: 1px solid lightgrey;")
                a(
                  href="/filmes/delete/" + f.id, 
                  style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; text-decoration: none; color: red; "
                ) Apagar

  .footer.w3-container.w3-blue 
    address Generated by EW 2025 class
